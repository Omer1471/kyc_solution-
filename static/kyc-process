<html>
<head>
    <title>Kea KYC Process</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #091723;
            color: #F2F8F3;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #F2F8F3;
            border-radius: 8px;
            color: #091723;
        }

        h1 {
            text-align: center;
        }

        label {
            display: block;
            margin-top: 10px;
        }

        input[type="text"],
        input[type="date"],
        input[type="tel"],
        input[type="radio"],
        input[type="checkbox"],
        input[type="file"],
        input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: none;
            border-radius: 4px;
            background-color: #091723;
            color: #F2F8F3;
        }

        input[type="submit"] {
            background-color: #0a1c2b;
            color: #F2F8F3;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #0c263f;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Kea KYC Process</h1>

        <!-- Step 1: -->
        <div id="step1">
            <h2>Step 1</h2>
            <p>Onboarding process phase 1</p>
            <p>Chase; Tell us a little about you, starting with your name:</p>
            <label for="first_name">First Name:</label>
            <input type="text" id="first_name" name="first_name" required>
            <label for="middle_name">Middle Name:</label>
            <input type="text" id="middle_name" name="middle_name">
            <label for="last_name">Last Name:</label>
            <input type="text" id="last_name" name="last_name">
            <button id="submitStep1">Submit</button>
        </div>

        <!-- Step 2: -->
        <div id="step2" style="display: none;">
            <h2>Step 2</h2>
            <p id="birthQuestion">When were you born, [Name]?</p>
            <label for="date_of_birth">Date of Birth:</label>
            <input type="date" id="date_of_birth" name="date_of_birth">
            <button id="submitStep2">Submit</button>
        </div>
    </div>

    <script>
        let uniqueID;  // This will store the unique ID received from the backend during Step 1

        document.getElementById("submitStep1").addEventListener("click", function(e) {
            e.preventDefault();

            const firstName = document.getElementById("first_name").value;
            const middleName = document.getElementById("middle_name").value;
            const lastName = document.getElementById("last_name").value;

            if (!firstName || !middleName || !lastName) {
                alert("All name fields must be filled out.");
                return; // Stop the function from continuing
            }

            const data = {
                first_name: firstName,
                middle_name: middleName,
                last_name: lastName
            };

            fetch("/kyc-step1", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === "success") {
                    uniqueID = data.unique_id; // Store the uniqueID received from the backend
                    document.getElementById('birthQuestion').textContent = `When were you born, ${firstName}?`;
                    document.getElementById('step1').style.display = 'none';
                    document.getElementById('step2').style.display = 'block';
                } else {
                    alert(data.error);
                }
            });
        });

        document.getElementById("submitStep2").addEventListener("click", function(e) {
            e.preventDefault();

            const dateOfBirth = document.getElementById("date_of_birth").value;

            const dobData = {
                unique_id: uniqueID,
                date_of_birth: dateOfBirth
            };

            fetch("/kyc-step2", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(dobData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === "success") {
                    alert("Date of birth saved successfully!");
                } else {
                    alert(data.error);
                }
            });
        });
    </script>
</body>
</html>
